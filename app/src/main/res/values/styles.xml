<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo2</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.JobSwift</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--// <item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="FullScreenDialog2" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/DialogAnimationFromRight</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationFromRight">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim_right</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomModalStyle</item>
    </style>

    <style name="BottomModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_shape</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:text">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicator">@drawable/tab_indicator_drawable</item>
        <item name="tabIndicatorAnimationDuration">100</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/shade_green</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/shade_green</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabBackground">@color/pale_silver</item>
    </style>

    <style name="CustomTabLayout2" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicator">@drawable/tab_indicator_drawable</item>
        <item name="tabIndicatorAnimationDuration">100</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/shade_green</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/shade_green</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabBackground">@color/light_silver</item>
    </style>


</resources>
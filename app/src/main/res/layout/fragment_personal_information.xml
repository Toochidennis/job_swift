<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.fragment.PersonalInformationFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_silver"
        android:theme="@style/Platform.MaterialComponents.Light">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_silver"
        android:contentDescription="@string/nested_scroll_view"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10">

                    <ImageView
                        android:id="@+id/skillImageView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/create_account_bg"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/profileImageLayout"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:background="@drawable/image_border"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="@id/skillImageView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/skillImageView">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="0dp"
                            app:cardCornerRadius="95dp">

                            <ImageView
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:contentDescription="@string/app_logo"
                                android:src="@drawable/login_logo" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/skillImageView" />

                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:text="Toochukwu Dennis"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/profileImageLayout" />

                    <TextView
                        android:id="@+id/headlineTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:text="Passionate Software Developer| Crafting Elegant Code| Exploring the intersection of Technology | Cybersecuirty Enthusiast"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        app:layout_constraintTop_toBottomOf="@id/nameTxt" />

                    <TextView
                        android:id="@+id/industryTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:text="Digital Dreams Academy Limited . Federal University Wukari Taraba State"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintTop_toBottomOf="@id/headlineTxt" />

                    <TextView
                        android:id="@+id/locationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:text="Enugu East, Enugu State, Nigeria"
                        android:textSize="@dimen/text_12"
                        app:layout_constraintTop_toBottomOf="@id/industryTxt" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:elevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/aboutTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_toStartOf="@id/editAboutBtn"
                        android:padding="@dimen/dimen_10"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/editAboutBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        android:id="@+id/bioTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aboutTxt"
                        android:padding="@dimen/dimen_10"
                        android:text="Passionate Software Developer| Crafting Elegant Code| Exploring the intersection of Technology | Cybersecuirty Enthusiast"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bioTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:background="@drawable/background_line"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_10"
                            android:text="Top skills"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_edit" />

                        <TextView
                            android:id="@+id/skillTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_32"
                            android:text="Passionate Software Developer| Crafting Elegant Code| Exploring the intersection of Technology | Cybersecuirty Enthusiast"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:elevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/experienceTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_toStartOf="@id/addExperienceBtn"
                        android:padding="@dimen/dimen_10"
                        android:text="Experience"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/addExperienceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@id/editExperienceBtn"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_add" />

                    <ImageView
                        android:id="@+id/editExperienceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/experienceImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/experienceTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:contentDescription="@string/app_logo"
                        android:src="@drawable/ic_company" />

                    <TextView
                        android:id="@+id/experienceNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/experienceTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:text="Mobile Application Developer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/companyNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/experienceNameTxt"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:text="Digital Dreams Limited .  Full-time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/startYearTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/companyNameTxt"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:text="Oct 2022 - Present. 1 yr 3 months"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/companyLocationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/startYearTxt"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:text="Enugu state, Nigeria . On-site"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/companySkillsTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/companyLocationTxt"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:text="Skills: Passionate Software Developer| Crafting Elegant Code| Exploring the intersection of Technology | Cybersecuirty Enthusiast"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_16"
                android:elevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10">

                    <TextView
                        android:id="@+id/educationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_toStartOf="@id/addEducationBtn"
                        android:padding="@dimen/dimen_10"
                        android:text="Education"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/addEducationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@id/editEducationBtn"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_add" />

                    <ImageView
                        android:id="@+id/editEducationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/educationImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/educationTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:contentDescription="@string/app_logo"
                        android:src="@drawable/ic_company" />

                    <TextView
                        android:id="@+id/schoolNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/educationTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_toEndOf="@id/educationImageView"
                        android:text="Federal University Wukari, Taraba State"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/programmeNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/schoolNameTxt"
                        android:layout_toEndOf="@id/educationImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:text="Bachelor's degree, Computer Science"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/graduationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/programmeNameTxt"
                        android:layout_toEndOf="@id/educationImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:text="Nov 2017 - Jul 2022"
                        android:textSize="@dimen/text_14" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>
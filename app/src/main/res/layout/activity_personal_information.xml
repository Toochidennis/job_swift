<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_silver"
    android:orientation="vertical"
    tools:context=".user.activity.PersonalInformationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pale_silver"
        android:theme="@style/Platform.MaterialComponents.Light"
        app:elevation="0dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/nested_scroll_view"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10">

                    <RelativeLayout
                        android:id="@+id/showcaseLayout"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/light_shaded_green"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/skillImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/skillImageButton"
                            android:layout_width="@dimen/dimen_32"
                            android:layout_height="@dimen/dimen_32"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:layout_marginEnd="@dimen/dimen_16"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/dimen_32">

                            <ImageView
                                android:layout_width="@dimen/dimen_16"
                                android:layout_height="@dimen/dimen_16"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_camera_plus"
                                app:tint="@color/shade_green" />

                        </com.google.android.material.card.MaterialCardView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/profileImageLayout"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:background="@drawable/profile_bg"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:backgroundTint="@color/pale_silver"
                        android:gravity="center"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="@id/showcaseLayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/showcaseLayout">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="150dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/profileImageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_logo"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user2"
                                app:tint="@color/gray" />

                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/editProfileImageButton"
                            android:layout_width="@dimen/dimen_32"
                            android:layout_height="@dimen/dimen_32"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="@dimen/dimen_32"
                            app:cardElevation="0dp"
                            app:contentPadding="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/profile_bg"
                                android:backgroundTint="@color/shade_green"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dimen_16"
                                    android:layout_height="@dimen/dimen_16"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/app_name"
                                    android:src="@drawable/ic_camera_plus"
                                    app:tint="@color/white" />
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/editProfileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:background="@drawable/button_bg"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/showcaseLayout" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text="Toochukwu Dennis"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_24"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/profileImageLayout" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/headlineTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintTop_toBottomOf="@id/nameTxt" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/industryTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14"
                        app:layout_constraintTop_toBottomOf="@id/headlineTxt" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/locationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text=""
                        android:textSize="@dimen/text_12"
                        app:layout_constraintTop_toBottomOf="@id/industryTxt" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_16">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/aboutTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@id/editAboutBtn"
                        android:padding="@dimen/dimen_16"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/editAboutBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/button_bg"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/bioTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aboutTxt"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bioTxt"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:background="@drawable/background_line"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_10">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/dimen_10"
                            android:text="Top skills"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16"
                            android:textStyle="bold"
                            app:drawableStartCompat="@drawable/ic_gem" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/skillTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_32"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_16">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/experienceTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@id/addExperienceBtn"
                        android:padding="@dimen/dimen_16"
                        android:text="Experience"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/addExperienceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_toStartOf="@id/editExperienceBtn"
                        android:background="@drawable/button_bg"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_add" />

                    <ImageView
                        android:id="@+id/editExperienceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/button_bg"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/experienceImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/experienceTxt"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:contentDescription="@string/app_logo"
                        android:src="@drawable/ic_company" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/experienceNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/experienceTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/companyNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/experienceNameTxt"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/startYearTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/companyNameTxt"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text=""
                        android:textSize="@dimen/text_14" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/companyLocationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/startYearTxt"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text=""
                        android:textSize="@dimen/text_14" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/companySkillsTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/companyLocationTxt"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_toEndOf="@id/experienceImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_16"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimen_10">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/educationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@id/addEducationBtn"
                        android:padding="@dimen/dimen_16"
                        android:text="Education"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/addEducationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_toStartOf="@id/editEducationBtn"
                        android:background="@drawable/button_bg"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_add" />

                    <ImageView
                        android:id="@+id/editEducationBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/button_bg"
                        android:contentDescription="@string/app_logo"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/ic_edit" />

                    <ImageView
                        android:id="@+id/educationImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/educationTxt"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:contentDescription="@string/app_logo"
                        android:src="@drawable/ic_school" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/schoolNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/educationTxt"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:layout_toEndOf="@id/educationImageView"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/programmeNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/schoolNameTxt"
                        android:layout_toEndOf="@id/educationImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/graduationTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/programmeNameTxt"
                        android:layout_toEndOf="@id/educationImageView"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_16"
                        android:text=""
                        android:textSize="@dimen/text_14" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>